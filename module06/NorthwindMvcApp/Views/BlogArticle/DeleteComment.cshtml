@model BlogCommentViewModel

@{
    ViewData["Title"] = "Delete comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="DeleteCommentConfirmed" asp-route-commentId="@Model.Id" asp-route-articleId="@Model.ArticleId" style="margin-bottom: 10px">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Comment text:</label>
        <textarea disabled asp-for="Text" rows="6" class="form-control">@Model.Text</textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }   
}