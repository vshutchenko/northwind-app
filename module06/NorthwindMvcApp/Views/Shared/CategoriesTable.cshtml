@using NorthwindMvcApp.ViewModels.Category
@using System.Security.Claims
@model IEnumerable<CategoryViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @if (this.User?.FindFirst(c => c.Type == ClaimTypes.Role)?.Value == "admin")
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="data:image;base64,@Convert.ToBase64String(item.Picture is null || item.Picture.Length == 0  ? Array.Empty<byte>() : item.Picture[78..])" width="60" height="60" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @if (this.User?.FindFirst(c => c.Type == ClaimTypes.Role)?.Value == "admin")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>