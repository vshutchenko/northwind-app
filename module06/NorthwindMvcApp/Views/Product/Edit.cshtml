@using NorthwindMvcApp.ViewModels.Product
@using NorthwindMvcApp.ViewModels.Category
@model ProductInputViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit product</h1>

<hr />
<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w-25">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="w-25">
            <div class="form-group ">
                <label asp-for="QuantityPerUnit" class="control-label"></label>
                <input asp-for="QuantityPerUnit" class="form-control" value="@Model.QuantityPerUnit">
                <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
            </div>
        </div>
        <div class="w-25">
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" value="@Model.UnitPrice">
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="w-25">
            <div class="form-group ">
                <label asp-for="UnitsInStock" class="control-label"></label>
                <input asp-for="UnitsInStock" class="form-control" value="@Model.UnitsInStock">
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
        </div>
        <div class="w-25">
            <div class="form-group ">
                <label asp-for="UnitsOnOrder" class="control-label"></label>
                <input asp-for="UnitsOnOrder" class="form-control" value="@Model.UnitsOnOrder">
                <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="w-25">
            <div class="form-group ">
                <label asp-for="ReorderLevel" class="control-label"></label>
                <input asp-for="ReorderLevel" class="form-control" value="@Model.ReorderLevel">
                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
            </div>
        </div>
        <div class="w-25">
            <div class="form-group ">
                <label asp-for="Discontinued" class="control-label"></label>
                <input asp-for="Discontinued" class="form-check-inline">
                <span asp-validation-for="Discontinued" class="text-danger"></span>
            </div>
        </div>
        <div class="w-25">
            <div class="form-group ">
                <label asp-for="CategoryId" class="control-label"></label>
                <select class="custom-select" asp-for="CategoryId" asp-items="@Model.CategoryItems"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div>
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


