@using NorthwindMvcApp.ViewModels.Users
@model LoginViewModel

@if (User.Identity.IsAuthenticated)
{
    <h2>You are logged in as @User.Identity.Name</h2>
}
else
{
    <h2>Login</h2>

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <div class="form-group w-25">
                <label asp-for="Name" class="control-label">Enter user name</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group w-25">
                <label asp-for="Password" class="control-label">Enter your password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </form>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}